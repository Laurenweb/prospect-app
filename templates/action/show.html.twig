{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
    <h1 class="display-4 my-5">Action</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ action.createdAt ? action.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ action.description | raw}}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info mb-3" href="{{ path('action_edit', {'id': action.id}) }}">Modifier</a>

    {{ include('action/_delete_form.html.twig') }}
    <br />
    <a href="{{ path('action_index') }}">Retour à la liste</a>
{% endblock %}
